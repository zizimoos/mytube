extends layouts/main.pug
include mixins/videoBlock

block content
    .search__header
        i.fa.fa-search 
        h3 Search result for &nbsp;
        span.search-term #{searchingBy}
    .search__videos
        if videos.length === 0
            h5 No Videos Found
        each item in videos
            +videoBlock({
                videoFile: item.fileUrl,
                id: item.id,
                title: item.title,
                views: item.views,
                description: item.description
            })