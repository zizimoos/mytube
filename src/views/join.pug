extends layouts/main.pug

block content
    .form-container
        form(action=routes.join, method="post")
            input(type="text", name="name", placeholder="Full name" ,required=true)
            input(type="email", name="email", placeholder="E-mail" ,required=true)
            input(type="password", name="password", placeholder="Password" ,required=true)
            input(type="password", name="vpassword", placeholder="Verify Password" ,required=true)
            input(type="submit", value="Join Now")
        include partials/socialLogin.pug